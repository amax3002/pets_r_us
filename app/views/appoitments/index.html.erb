<p id="notice"><%= notice %></p>

<h1>Appoitments</h1>
<table>
  <thead>
    <tr>
      <th>Expected at</th>
      <th>Pet</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appoitments.each do |appoitment| %>
      <tr>
        <td><%= appoitment.expected_at %></td>
        <td><%= appoitment.pet_id %></td>
        <td><%= appoitment.reason %></td>
        <td><%= link_to 'Show', appoitment %></td>
        <td><%= link_to 'Edit', edit_appoitment_path(appoitment) %></td>
        <td><%= link_to 'Destroy', appoitment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

