<h1>Pets</h1>

<% if total_pages > current_page  %>
  <%= link_to "Next Page", pets_path(page: current_page + 1) %>
<% end %>
<% 10.times do |i| %>
  <%= link_to current_page + i, pets_path(page: current_page + i) %>
<% end %>
<% if current_page > 0  %>
  <%= link_to "Prev Page", pets_path(page: current_page - 1)%>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Born on</th>
      <th>Species</th>
      <th>Breed</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.owner_id %></td>
        <td><%= pet.born_on %></td>
        <td><%= pet.species %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.image_url %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>
