<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Owner:</strong>
  <%= link_to @pet.owner.full_name, owner_path(@pet.owner.id) %>
</p>

<p>
  <strong>Born on:</strong>
  <%= @pet.born_on %>
</p>

<p>
  <strong>Species:</strong>
  <%= @pet.species %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @pet.breed %>
</p>

<p>
  <strong>Image url:</strong>
  <%= image_tag @pet.image_url %>
</p>

<%= render partial: 'comments/list', locals: {commentable: @pet} %>
<%= link_to 'Edit', edit_pet_path(@pet) %>
<%= link_to 'Back', pets_path %>
