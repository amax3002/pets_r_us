<h1>Owners</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th>Blood type</th>
      <th>Ssn</th>
      <th>Phone number</th>
      <th>Balance in cents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.full_name %></td>
        <td><%= owner.email %></td>
        <td><%= owner.blood_type %></td>
        <td><%= owner.ssn %></td>
        <td><%= owner.phone_number %></td>
        <td><%= owner.balance_in_cents %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

